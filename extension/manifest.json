{
  "manifest_version": 3,
  "name": "Strompt",
  "version": "1.0",
  "description": "Smart copy paste",
  "permissions": ["scripting", "activeTab", "clipboardWrite", "contextMenus", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "trigger-groq": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Send selected text to Groq"
    }
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle" 
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "32": "icon_32.png"
  },
  "web_accessible_resources": [{
    "resources": ["icon.png"],
    "matches": ["<all_urls>"]
  }]
}
